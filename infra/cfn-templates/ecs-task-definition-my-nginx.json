{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "MyNginxTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": "my-nginx-task",
        "RuntimePlatform": {
          "CpuArchitecture": "ARM64",
          "OperatingSystemFamily": "LINUX"
        },
        "TaskRoleArn": "arn:aws:iam::403177882230:role/ecsTaskExecutionRole",
        "ExecutionRoleArn": "arn:aws:iam::403177882230:role/ecsTaskExecutionRole",
        "NetworkMode": "awsvpc",
        "ContainerDefinitions": [
          {
            "Name": "my-nginx",
            "Image": "403177882230.dkr.ecr.eu-west-2.amazonaws.com/my-nginx:latest",
            "Cpu": 1024,
            "Memory": 2048,
            "PortMappings": [
              {
                "ContainerPort": 80,
                "HostPort": 80,
                "Protocol": "tcp"
              }
            ],
            "Essential": true,
            "DisableNetworking": false,
            "Privileged": false,
            "ReadonlyRootFilesystem": false,
            "LogConfiguration": {
              "LogDriver": "awslogs",
              "Options": {
                "awslogs-group": "/ecs/my-nginx-task",
                "mode": "non-blocking",
                "awslogs-create-group": "true",
                "max-buffer-size": "25m",
                "awslogs-region": "eu-west-2",
                "awslogs-stream-prefix": "ecs"
              }
            },
            "Interactive": true,
            "PseudoTerminal": true
          }
        ],
        "RequiresCompatibilities": ["FARGATE"],
        "Cpu": "1024",
        "Memory": "2048"
      }
    }
  },
  "Outputs": {
    "TaskDefinitionArn": {
      "Description": "The ARN of the ECS task definition.",
      "Value": {
        "Ref": "MyNginxTaskDefinition"
      },
      "Export": {
        "Name": "MyNginxTaskDefinitionArn"
      }
    }
  }
}
